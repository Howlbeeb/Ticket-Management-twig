  <div class="rounded-lg shadow-[0_8px_24px_rgba(2,6,23,0.06)] p-[18px] flex flex-col gap-4">
    <h4 class="font-semibold text-2xl flex items-center gap-4">
      <!-- MdManageHistory -->
