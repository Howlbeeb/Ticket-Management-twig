<form method="POST" action="/dashboard/tickets/create" class="space-y-3">
  <h3 class="font-semibold mb-4">Add Ticket</h3>

  <div>
    <label class="block text-sm">Title</label>
    <input name="title" value="{{ initial.title|default('') }}" class="w-full p-2 border rounded border-slate-200" />
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
    <div>
      <label class="block text-sm">Status</label>
      <select name="status" class="w-full p-2 border rounded border-slate-200">
        <option value="open" {% if initial.status == 'open' %}selected{% endif %}>open</option>
        <option value="in_progress" {% if initial.status == 'in_progress' %}selected{% endif %}>in_progress</option>
        <option value="closed" {% if initial.status == 'closed' %}selected{% endif %}>closed</option>
      </select>
    </div>
    <div>
      <label class="block text-sm">Priority</label>
      <select name="priority" class="w-full p-2 border rounded">
        <option value="low" {% if initial.priority == 'low' %}selected{% endif %}>low</option>
        <option value="medium" {% if initial.priority == 'medium' %}selected{% endif %}>medium</option>
        <option value="high" {% if initial.priority == 'high' %}selected{% endif %}>high</option>
      </select>
    </div>
  </div>

  <div>
    <label class="block text-sm">Description (optional)</label>
    <textarea name="description" rows="4" class="w-full p-2 border rounded border-slate-200">{{ initial.description|default('') }}</textarea>
  </div>

  <div class="flex items-center gap-3 justify-end">
    <button type="submit" class="px-4 py-2 bg-orange-400 text-white rounded w-full md:w-auto">
      {{ submitLabel }}
    </button>
  </div>
</form>
