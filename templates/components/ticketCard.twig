<article class="card flex flex-col dark:bg-[#3a3734]">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h3 class="font-semibold">{{ ticket.title }}</h3>
      <p class="text-sm text-slate-500 mt-2">{{ ticket.description|slice(0, 120) }}</p>
    </div>
    <div class="flex flex-col items-end gap-2">
      {% include "badge.twig" with { status: ticket.status } %}
      <div class="text-xs text-slate-400">{{ ticket.createdAt|date("F j, Y, g:i a") }}</div>
    </div>
  </div>
  <div class="mt-4 flex gap-2">
    <form method="POST" action="/dashboard/tickets/edit/{{ ticket.id }}">
      <button class="px-3 py-1 text-green-400 border rounded">Edit</button>
    </form>
    <form method="POST" action="/dashboard/tickets/delete/{{ ticket.id }}">
      <button class="px-3 py-1 border rounded text-red-600">Delete</button>
    </form>
  </div>
</article>
